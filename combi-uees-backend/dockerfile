# 1. Imagen base con PHP, Composer y extensiones importantes
FROM php:8.2-fpm

# 2. Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    git zip unzip libpng-dev libonig-dev libxml2-dev libzip-dev \
    && docker-php-ext-install pdo pdo_mysql mbstring zip exif pcntl

# 3. Instalar Composer globalmente
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# 4. Configurar directorio de la app
WORKDIR /var/www/html

# 5. Copiar archivos del proyecto
COPY . .

# 6. Instalar dependencias de Laravel
RUN composer install --no-dev --optimize-autoloader

# 7. Permisos
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# 8. Generar key si no existe
RUN php artisan key:generate --force

# 9. Exponer el puerto e iniciar servidor
EXPOSE 8000

CMD php artisan serve --host=0.0.0.0 --port=8000
